<nav class="navbar bg-light mb-3">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <img src="/favicon.png" width="24" height="24">
    </a>

    <%= form_with model: @new_project, class: "d-flex" do |form| %>
      <%= form.text_field :name, class: "form-control me-2", placeholder: "Enter name...", required: true %>

      <button class="btn btn-primary text-nowrap" type="submit">
        <i class="bi bi-journal-plus"></i> New project
      </button>
    <% end %>
  </div>
</nav>

<% if @project&.errors.present? %>
  <div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">
      <i class="bi bi-exclamation-triangle-fill me-2"></i> Error
    </h4>

    <ul class="list-group list-group-flush">
      <% @project.errors.each do |error| %>
        <li class="list-group-item list-group-item-danger"><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% if @projects.blank? %>
  <div class="alert alert-info">
    <i class="bi bi-info-circle"></i> No projects yet. Create one to get started.
  </div>
<% else %>
  <table class="table table-hover table-striped">
    <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Created at</th>
      <th scope="col" class="text-end"></th>
    </tr>
    </thead>
    <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td>
          <%= link_to project_path(project), class: "btn btn-sm btn-outline-secondary text-wrap" do %>
            <i class="bi bi-journal-text"></i> <%= project.name %>
          <% end %>
        </td>
        <td><%= project.created_at.strftime("%B %d, %Y") %></td>
        <td class="text-end">
          <%= link_to project_path(project), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" do %>
            <i class="bi bi-trash"></i> Delete
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>
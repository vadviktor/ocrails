<div x-data="{ image_upload_form_open: false }">
  <nav class="navbar bg-light mb-2">
    <div class="container-fluid">
      <a class="navbar-brand me-auto" href="/">
        <img src="/favicon.png" width="24" height="24" class="me-3">
      </a>

      <button class="nav-link me-3" type="button" x-on:click="image_upload_form_open = ! image_upload_form_open">
        <i class="bi bi-plus-square-fill"></i> Add pages
      </button>

      <% if @project.images.any? %>
        <div class="d-none d-sm-none d-md-none d-lg-block">
          <button class="nav-link" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDocuments">
            <i class="bi bi-book-half"></i> Pages
          </button>
        </div>
      <% end %>

    </div>
  </nav>

  <h1 class="mb-3"><%= @project.name %></h1>

  <%= render partial: 'shared/errors', locals: { model: @project } %>

  <%= render partial: 'projects/show/image_upload_form', locals: { project: @project } %>

  <%= render partial: 'projects/show/images_and_texts', locals: { project: @project } %>

  <div class="mt-3 d-sm-block d-md-block d-lg-none">
    <div class="alert alert-info">
      <i class="bi bi-info-circle"></i> Displaying documents is not supported on small screens.
    </div>
  </div>

</div>
<div class="mb-5"></div>
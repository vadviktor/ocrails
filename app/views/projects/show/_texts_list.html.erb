<h3>Recognized Texts</h3>
<ul class="list-group">
  <% image.texts.in_order.each do |text| %>
    <li class="list-group-item"
        x-bind:class="text_to_highlight != <%= text.id %> || 'active'">
      <div class="d-flex">
        <div class="pe-2">
          <input class="form-check-input"
                 type="checkbox"
                 checked="checked"
                 data-bs-toggle="tooltip"
                 data-bs-title="IMPLEMENT ME">
        </div>

        <div class="flex-grow-1 pe-2"><%= text.text %></div>

        <div class="pe-2">
          <button class="btn btn-dark" type="button"
                  hx-get="<%= url_for(only_path: true,
                                      controller: :texts,
                                      action: :position_up,
                                      project_id: image.project,
                                      id: image,
                                      text_id: text.id) %>"
                  hx-swap="innerHTML transition:true"
                  hx-target="#show-texts_list">
            <i class="bi bi-arrow-up"></i>
          </button>
        </div>

        <div class="pe-2">
          <button class="btn btn-dark" type="button"
                  hx-get="<%= url_for(only_path: true,
                                      controller: :texts,
                                      action: :position_down,
                                      project_id: image.project,
                                      id: image,
                                      text_id: text.id) %>"
                  hx-swap="innerHTML transition:true"
                  hx-target="#show-texts_list">
            <i class="bi bi-arrow-down"></i>
          </button>
        </div>

        <div>
          <button class="btn btn-dark" type="button"
                  data-bs-toggle="tooltip"
                  data-bs-title="IMPLEMENT ME">
            <i class="bi bi-clipboard"></i>
          </button>
        </div>

      </div>

    </li>
  <% end %>
</ul>
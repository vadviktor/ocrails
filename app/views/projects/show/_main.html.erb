<main>

  <nav class="navbar bg-light mb-3">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <img src="/favicon.png" width="24" height="24" class="me-3" alt="">
      </a>

      <span class="navbar-brand me-auto"><%= project.name %></span>

      <%= render partial: 'projects/show/delete_document_button', locals: { image: image } %>

      <%= link_to upload_project_path(project), class: "nav-link me-3" do %>
        <i class="bi bi-plus-square-fill"></i> Add pages
      <% end %>
    </div>
  </nav>

  <%= render partial: 'shared/errors', locals: { model: project } %>

  <%= render partial: 'projects/show/document_and_texts', locals: { image: image } %>

  <div class="mt-3 d-sm-block d-md-block d-lg-none">
    <div class="alert alert-info">
      <i class="bi bi-info-circle"></i> Displaying documents is not supported on small screens.
    </div>
  </div>

  <div class="mb-5"></div>

</main>
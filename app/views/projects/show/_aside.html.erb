<aside class="project-sidebar overflow-y-scroll">
  <h3 class="mt-2 mb-3">Documents</h3>
  <% if images.any? %>
    <% images.each do |image| %>
      <div class="card text-bg-secondary mb-3" style="max-width: 10rem;">
        <div class="card-header text-truncate"><%= image.document.blob.filename %></div>
        <%= link_to project_image_path(image.project, image) do %>
          <img src="<%= image.document.variant(:thumb).processed.url %>"
               class="card-img-top"
               alt=""/>
        <% end %>
        <div class="card-footer">
          <div class="row">

            <div class="col-6">
              <%= link_to position_up_project_image_path(image.project, image), class: "btn btn-light" do %>
                <i class="bi bi-arrow-up"></i>
              <% end %>
            </div>

            <div class="col-6">
              <%= link_to position_down_project_image_path(image.project, image), class: "btn btn-light" do %>
                <i class="bi bi-arrow-down"></i>
              <% end %>
            </div>

          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</aside>
